<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CapstoneProject4" parent="Theme.CapstoneProject4.Light" />
    <style name="Theme.CapstoneProject4.Light" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/text_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Surface and text colors. -->
        <item name="colorOnBackground">@color/text_light</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorSurface">@color/card_light</item>
        <item name="colorOnSurface">@color/text_light</item>
    </style>
</resources>
