<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CapstoneProject4" parent="Theme.CapstoneProject4.Dark" />
    <style name="Theme.CapstoneProject4.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/text_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Surface and text colors. -->
        <item name="colorOnBackground">@color/text_dark</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorSurface">@color/card_dark</item>
        <item name="colorOnSurface">@color/textPrimaryColor</item>
    </style>
</resources>
